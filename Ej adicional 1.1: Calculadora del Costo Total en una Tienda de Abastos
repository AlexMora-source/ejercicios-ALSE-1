#include <iostream>
#include <cmath>
using namespace std; 
int main() {
    float compras[50];
    float valor_c = 0.0;
    float descuento = 0.0;
    float impuesto = 0.0;
    int n; //establecemos el limite de compras
    
    cout << "Ingrese la cantidad de productos que comprò (maximo 50): ";
    cin >> n;
    while (n > 50) {
        cout << "Ingrese la cantidad de productos que comprò (maximo 50): ";
        cin >> n;
    }
    
    int i = 0;
    while(i < n){
        cout << "Precio del producto " << i + 1 << endl;
        cin >> compras[i];
        valor_c += compras[i];
        i += 1;
    }
    cout << "El valor de los productos sin aplicar el impuesto es de: " << valor_c << "$" << "\n";
    impuesto = (valor_c)*0.08;
    valor_c += impuesto;
    cout << "El valor del impuesto de sus compras es de: " << impuesto << "$" << "\n";

    if (valor_c > 100.0) {
        cout << "Se aplicarà un descuento a su compra" << "\n";
        descuento = (valor_c)*0.1;
        valor_c -= descuento; 
        cout << "Descuento:" << descuento << "$" << "\n";
    }
    valor_c = round(valor_c * 100) / 100; //para que el valor se aproxime a 2 decimales
    cout << "Valor total: " << valor_c << "$" << endl;
    return 0; 
}
